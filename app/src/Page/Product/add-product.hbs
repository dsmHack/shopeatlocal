{{!-- add-product.hbs
//    ---------------
//    Add Product view --}}

<div class="container py-4">
	<div class="d-flex flex-row justify-content-between">
		<h2 class="mb-3">Add product</h2>

		{{#unless CkImperUserSelf}}
		<div class="text-right">
			<h3 class="mb-0">{{CredImperUser.NameLogin}}</h3>

			{{>Misc/pIDsLine CredImperUser}}

			<hr class="my-2">
		</div>
		{{/unless}}
	</div>

	<form id="form-main" action="/add-product" method="POST"
		enctype="multipart/form-data" novalidate onsubmit="Disab_Form()">

		<input type="hidden" name="_csrf" value="{{TokCSRF}}">

		{{>Product/pCtlsFormProduct}}

		<hr>

		<h2 class="mt-3 mb-1">First variety</h2>

		<div class="Explain mb-4 w-lg-75">
			<p>
				Every product contains one or more <em>varieties</em>, which are
				distinct flavors and sizes that share general product characteristics,
				such as description and image. Varieties have their own prices and
				inventory quantities.
			</p>
			<p>
				You must define one variety now. You can add more later, after you have
				added the product.
			</p>
		</div>

		<div class="w-lg-75">
		{{>Product/pCtlsFormVty aPage='add-variety'}}
		</div>

		<hr class="mt-2">

		<div class="d-flex flex-row">
			<button type="submit" class="btn btn-primary ml-auto">Save</button>
		</div>
	</form>
</div>
