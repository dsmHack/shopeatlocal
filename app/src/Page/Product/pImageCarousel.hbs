		/* center carousel content */
		#productCarousel {
				{
				IDProduct
			}
		}

			{
			display: flex;
			flex-direction: column;
			align-items: center;
		}

		#productCarousel {
				{
				IDProduct
			}
		}

		.carousel-indicators {
			position: static;
			margin: 8px 0 0;
		}



		.carousel-fade .carousel-item.active {
			transform: none !important;
