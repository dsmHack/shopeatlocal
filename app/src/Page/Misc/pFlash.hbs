{{!-- pFlash.hbs
//    ----------
//    Flash message
//
// Note that client-side flash messages are generated by the Flash function
// within 'main.js'. I don't want to run Handlebars on the client side right
// now, so changes here should be applied to that function manually. --}}

<div class="Flash alert alert-{{Sty}} alert-dismissible mb-0" role="alert">
	{{#if Head}}<strong>{{Head}}</strong>{{/if}}
	{{#if Msg}}{{hHTMLSafe Msg}}{{/if}}

	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
</div>