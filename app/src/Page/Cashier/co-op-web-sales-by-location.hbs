{{!-- co-op-web-sales-by-location.hbs
//    -------------------------------
//    Co-op Web Sales By Location view --}}

<div class="container py-4">
	<div class="d-md-flex justify-content-between align-items-baseline mb-2">
		<h2 class="mb-0">Market web sales by location</h2>
		<h5>{{hTextWhen (hNow) "FullMed" "HourMin"}}</h5>
	</div>

	<div class="d-print-none row">
		<div class="col-md">
			This page displays nominal web sales by location for the last completed
			pickup window. Nominal sales are 'in cart' values, before producer or
			shopper fees have been assessed.
		</div>
		<div class="col-md">
			{{>Misc/pInstructPrint}}
		</div>
	</div>

	<hr>

	<div class="d-md-flex mb-3">
		{{#with Cyc}}
		<div class="d-md-flex mb-1 mb-md-0">
			<div class="d-none d-md-block mr-3 mt-1">
				<img src="{{hPrefixStatic 'cyc.svg'}}" alt="" width="40" height="40">
			</div>
			<div>
				<strong>Cycle {{hTextIDCyc IDCyc}}</strong><br>
				Ending {{hTextWhen WhenEndCyc "Long"}}
			</div>
		</div>
		{{/with}}
	</div>

	{{#unless Locs}}
	<div class="jumbotron">
		<h2 class="display-4 font-size-200">No web sales this cycle</h2>
	</div>
	{{else}}
	<div class="GridTbl Head d-none d-md-block">
		<div class="row font-weight-bold">
			<div class="col-2">Code</div>
			<div class="col">Name</div>
			<div class="col-2 text-right">Orders</div>
			<div class="col-2 text-right">Items</div>
			<div class="col-2 text-right">Sales</div>
		</div>
	</div>

	<div class="GridTbl Body mb-3">
		{{#each Locs}}
		<div class="Row">
			<div class="row">
				<div class="col-2">{{CdLoc}}</div>
				<div class="col">{{NameLoc}}</div>
				<div class="col-2 text-right">{{CtCart}}</div>
				<div class="col-2 text-right">{{QtySold}}</div>
				<div class="col-2 text-right">{{hTextCurrOrOrig SaleNom}}</div>
			</div>
		</div>
		{{/each}}
	</div>

	<div class="d-flex">
		<a class="btn btn-secondary ml-auto" style="width:124px; margin-bottom: 5px;"
			href="/co-op-web-sales-by-location-export">Export</a>
	</div>
	{{/unless}}
	<div class="d-flex">
		<a class="btn btn-secondary ml-auto"
			href="/co-op-web-sales-by-location-export-10">Export Last 10</a>
	</div>
</div>
