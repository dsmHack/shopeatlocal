{{!-- pInputsCyc.hbs
//    --------------
//    Cycle input elements --}}

{{!-- Cycle start --}}

<div class="form-row">
	<div class="form-group col-md-6">
		<label for="WhenStartCyc{{IDCyc}}">Cycle start</label>
		<input name="WhenStartCyc{{IDCyc}}" id="WhenStartCyc{{IDCyc}}" type="datetime-local"
			placeholder="yyyy-mm-ddTHH:mm" {{#if CkPastStartCyc}}disabled{{/if}}
			value="{{hTextDateTimeInput WhenStartCyc}}"
			class="WhenStartCyc form-control {{#if MsgFailWhenStartCyc}}is-invalid{{/if}}">
		{{hDivMsgFail MsgFailWhenStartCyc}}
	</div>
</div>

