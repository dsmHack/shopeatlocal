{{!-- cart-summary.hbs
//    ----------------
//    Cart Summary view --}}

<div class="container py-4">
	<div class="d-md-flex flex-row justify-content-between align-items-baseline
		mb-2">
		<h2 class="mb-0">Cart summary</h2>
		<h5>{{hTextWhen (hNow) "FullMed" "HourMin"}}</h5>
	</div>

	<div class="d-print-none Flow-md-2">
		<p>
			This page displays cart totals for shoppers in the current cycle.
			Click any row to display the cart's contents.
		</p>
		<p>
			{{>Misc/pInstructPrint}}
		</p>
	</div>

	<hr>

	{{#unless Membs}}
	<div class="jumbotron">
		<h2 class="display-4 font-size-200">No members with cart items</h2>
	</div>
	{{else}}
	<div class="GridTbl Head d-none d-md-block">
		<div class="row font-weight-bold">
			<div class="col">Member</div>
			<div class="col-3 text-right">Pickup</div>
			<div class="col-2 text-right">Prom</div>
			<div class="col-2 text-md-right">Total</div>
		</div>
	</div>

	<div class="GridTbl Body mb-3">
		{{#each Membs}}
		<div class="Row">

			{{!-- Desktop layout
			//    -------------- --}}

			<div class="row d-none d-md-flex">
				<div class="col">
					<a href="/cart-detail/{{IDCart}}" class="stretched-link"></a>
					{{hTextIDMemb IDMemb}} {{Name1First}} {{Name1Last}}
				</div>
				<div class="col-3 text-right">
					<a href="/cart-detail/{{IDCart}}" class="stretched-link"></a>
					{{NameLoc}}
				</div>
				<div class="col-2 text-right">
					<a href="/cart-detail/{{IDCart}}" class="stretched-link"></a>
					{{QtyProm}}
				</div>
				<div class="col-2 text-right">
					<a href="/cart-detail/{{IDCart}}" class="stretched-link"></a>
					{{hTextCurrOrOrig Cart.Ttl}}
				</div>
			</div>

			{{!-- Mobile layout
			//    ------------- --}}

			<div class="row d-md-none">
				<div class="col-md d-flex font-weight-semi mb-1">
					<a href="/cart-detail/{{IDCart}}" class="stretched-link"></a>
					{{hTextIDMemb IDMemb}} {{Name1First}} {{Name1Last}}
				</div>
				<div class="col">
					<a href="/cart-detail/{{IDCart}}" class="stretched-link"></a>
					{{NameLoc}}
				</div>
				<div class="col-3">
					<a href="/cart-detail/{{IDCart}}" class="stretched-link"></a>
					{{QtyProm}} prom
				</div>
				<div class="col-3 text-right">
					<a href="/cart-detail/{{IDCart}}" class="stretched-link"></a>
					{{hTextCurrOrOrig Cart.Ttl}}
				</div>
			</div>
		</div>
		{{/each}}
	</div>
	{{/unless}}
</div>