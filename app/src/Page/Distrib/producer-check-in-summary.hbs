{{!-- producer-check-in-summary.hbs
//    -----------------------------
//    Producer Check-in Summary view
//
//    We could add a link back to the Delivery Progress page, but deliveries
//    occur randomly throughout the delivery window, so that is unlikely to be
//    the right thing. --}}

<div class="w-lg-40 container py-4 pb-2">
	{{#with InvcProducer}}
	<div class="d-flex flex-row align-items-end">
		<h3 class="mb-0">
			Producer check-in summary
		</h3>
		<h6 class="ml-auto mb-0">
			{{hTextWhen WhenUpd "Med" "HourMin"}}
		</h6>
	</div>

	<hr>

	<div class="d-flex">
		<div class="pt-1 pr-3">
			<img src="{{hPrefixStatic 'producer.svg'}}" alt="" width="40" height="40">
		</div>

		<div>
			<div class="mb-2">
				{{>Misc/pIDsLine this}}<br>
				{{Name1First}} {{Name1Last}}<br>
				{{#if Name2Last}}
				{{Name2First}} {{Name2Last}}<br>
				{{/if}}
				<strong>
				{{NameBus}}<br>
				</strong>
				{{Addr1}}<br>
				{{#if Addr2}}{{Addr2}}<br>{{/if}}
				{{City}}, {{St}} {{Zip}}
			</div>
			<div>
				{{hLinkEmail Email}}<br>
				{{hLinkPhone Phone1}}
			</div>
		</div>
	</div>

	<hr>

	<div class="row mb-2">
		<div class="col-md mb-2 mb-md-0">
			Invoice amount
		</div>
		{{#if TtlEBT}}
		<div class="col-4">
			<div class="d-flex flex-row justify-content-between">
				<div>Money</div>
				<div class="text-right pl-4">{{hTextCurrOrErr TtlMoney}}</div>
			</div>
			<div class="d-flex flex-row justify-content-between">
				<div>EBT</div>
				<div class="text-right pl-4">{{hTextCurrOrErr TtlEBT}}</div>
			</div>
			<hr class="my-1">
			<div class="d-flex flex-row justify-content-between font-weight-bold">
				<div>Total</div>
				<div class="text-right pl-4">{{hTextCurrOrErr Ttl}}</div>
			</div>
		</div>
		{{else}}
		<div class="col-4 text-md-right font-weight-bold">
			{{hTextCurrOrErr Ttl}}
		</div>
		{{/if}}
		<div class="LinksPg col-3 my-0">
			<a href="/web-producer-invoice/{{IDInvcProducerWeb}}">
				Invoice
			</a>
		</div>
	</div>

	<div class="w-75 text-muted font-size-90">
		The producer's earnings will be added to their transaction history when the
		delivery window ends.
	</div>
	{{/with}}
</div>
